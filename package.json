{
  "name": "envs",
  "version": "0.0.1",
  "description": "Environments Common for the bit Community",
  "main": "index.js",
  "scripts": {
    "clean": "./.taskfile clean",
    "test": "bit test",
    "build": "run-s build:bit copy",
    "copy": "cp packages/ts-compiler/src/tsconfig.json dist/compilers/typescript/tsconfig.json",
    "build:bit": "bit build",
    "lint": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}' --quiet --fix --jsx",
    "watch": "bit watch",
    "postinstall": "./.taskfile post_install "
  },
  "keywords": [],
  "author": "Doron Tsur, <doron@bit.dev>",
  "license": "MIT",
  "dependencies": {
    "@types/recursive-readdir": "^2.2.0",
    "@types/vinyl": "^2.0.3",
    "recursive-readdir": "^2.2.2"
  },
  "devDependencies": {
    "@types/chai": "^4.2.0",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.7.2",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "ts-node": "^8.3.0"
  },
  "bit": {
    "env": {
      "compiler": "bit.envs/compilers/typescript@3.0.15"
    },
    "componentsDefaultDirectory": "components/{name}",
    "packageManager": "npm",
    "overrides": {
      "*": {
        "devDependencies": {
          "@types/node": "+"
        }
      },
      "compilers/typescript": {
        "dependencies": {
          "@types/recursive-readdir": "+",
          "recursive-readdir": "+"
        }
      }
    }
  }
}
